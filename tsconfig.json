{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ES2022",
        "moduleResolution": "node",
        "outDir": "./dist",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "rootDir": "./",
        "strict": true,
        "skipLibCheck": true,
        "target": "ES2022"
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}